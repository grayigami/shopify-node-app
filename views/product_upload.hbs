{% assign template = 'vendor' %}
<h1 style="text-align: center;">Upload Sheet Music</h1>
<div style="width: 40%; min-width: 290px; margin: 0 auto; padding: 10px; text-align: center; border-width: medium; border-style: solid; border-color: #FF94C1;">

<form style="width:30%; min-width: 250px; margin: 0 auto;" id="uploadForm" name="uploadForm" action="/tools/user/upload/submitted" method="post" enctype="multipart/form-data">
    <label for="productTitle">Product Title</label>
    <input type="text" name="productTitle" required><br>

    <label for="productPrice">Price (USD)</label>
    <input name="productPrice" type="number" min="0.00" step="0.01" max="2500" value="25.00" required/><br>
    <label for="productDescription">Product Description</label>
    <textarea name="productDescription" cols="20" rows="10" required></textarea><br>

    <label for="productTags">Product Tags</label>
    <input type="text" name="productTags" required><br>

    <label for="productImage">Product Preview Images</label>
    <input type="file" name="productImage" multiple required><br>

    <label for="productFile">Product File</label>
    <input type="file" name="productFile" multiple required><br>

    <label for="copyright">Copyright Claimants</label>
    <input type="text" name="copyright">
</form>

<input type="submit" class="btn" form="uploadForm" value="Submit"></input>
</div>