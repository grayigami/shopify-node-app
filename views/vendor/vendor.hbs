<head>
  <link rel="stylesheet" href="https://storage.googleapis.com/penguinwebkit/dashboard%20(2).css">
  <script>
window.onload = function () {

var chart = new CanvasJS.Chart("chartContainer", {
	animationEnabled: true,  
	title:{
		text: "Past 30 Day Sales"
	},
	data: [{
		yValueFormatString: "#,### Units",
		xValueFormatString: "YYYY",
		type: "spline",
		dataPoints: [
			{x: 1, y: 2},
            {x: 2, y: 2},
            {x: 1, y: 2},
			
			{x: new Date(2017, 0), y: 2000000}
		]
	}]
});
chart.render();

}
</script>
